generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  gubernur
  staff
  staff_master
}

enum StatusTahapan {
  on_progress
  selesai
}

// =========================================
// USER & AUTH
// =========================================

model User {
  id           Int           @id @default(autoincrement())
  username     String        @unique
  password     String
  name         String?
  role         Role
  
  // Relasi ke Dinas
  dinasId      Int?          @map("dinas_id")
  dinas        Dinas?        @relation(fields: [dinasId], references: [id])
  
  accessTokens AccessToken[]
  
  createdAt    DateTime      @default(now()) @map("created_at")
  updatedAt    DateTime      @updatedAt @map("updated_at")

  @@map("users")
}

model AccessToken {
  id        Int       @id @default(autoincrement())
  token     String    @unique @db.VarChar(255)
  userId    Int       @map("user_id")
  expiresAt DateTime? @map("expires_at")
  revoked   Boolean   @default(false)
  createdAt DateTime  @default(now()) @map("created_at")
  user      User      @relation(fields: [userId], references: [id])

  @@index([userId])
  @@map("access_tokens")
}

// =========================================
// ENTITAS ORGANISASI & PROGRAM
// =========================================

model Dinas {
  id        Int       @id @default(autoincrement()) 
  namaDinas String    @unique @map("nama_dinas")
  slug      String    @unique
  
  users     User[]
  programs  Program[]
  
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")

  @@map("dinas")
}

model Program {
  id          Int                  @id @default(autoincrement()) 
  namaProgram String               @map("nama_program")
  slug        String               @unique
  isPrioritas Boolean              @default(false) @map("is_prioritas")
  
  dinasId     Int                  @map("dinas_id")
  dinas       Dinas                @relation(fields: [dinasId], references: [id])
  
  pengadaan   TransaksiPengadaan[]
  dokumen     DokumenProgram[]     
  
  createdAt   DateTime             @default(now()) @map("created_at")
  updatedAt   DateTime             @updatedAt @map("updated_at")

  @@map("programs")
}

model DokumenProgram {
  id          Int      @id @default(autoincrement())
  
  programId   Int      @map("program_id")
  program     Program  @relation(fields: [programId], references: [id], onDelete: Cascade)
  
  namaFile    String   @map("nama_file")
  fileUrl     String   @map("file_url")
  
  createdAt   DateTime @default(now()) @map("created_at")

  @@map("dokumen_program")
}

// =========================================
// MASTER DATA 
// =========================================

model Pengadaan {
  id            Int                  @id @default(autoincrement()) 
  namaPengadaan String               @unique @map("nama_pengadaan")
  
  tahapan       Tahapan[]
  transaksi     TransaksiPengadaan[]

  @@map("master_pengadaan")
}

model Tahapan {
  id               Int              @id @default(autoincrement()) 
  
  pengadaanId      Int              @map("pengadaan_id")
  pengadaan        Pengadaan        @relation(fields: [pengadaanId], references: [id])
  
  noUrut           Int              @map("no_urut")
  namaTahapan      String           @map("nama_tahapan")
  
  standarWaktuHari Int?             @map("standar_waktu_hari")
  isWaktuEditable  Boolean          @default(false) @map("is_waktu_editable")
  
  bobot            Int              
  
  progresTahapan   ProgresTahapan[]

  @@map("master_tahapan")
}

// =========================================
// DATA REALISASI 
// =========================================

model TransaksiPengadaan {
  id             Int              @id @default(autoincrement()) 
  namaTransaksi  String           @map("nama_transaksi")
  title          String           @map("title")
  anggaran       BigInt
  
  programId      Int              @map("program_id")
  program        Program          @relation(fields: [programId], references: [id], onDelete: Cascade)
  
  pengadaanId    Int              @map("pengadaan_id")
  pengadaan      Pengadaan        @relation(fields: [pengadaanId], references: [id])
  
  progresTahapan ProgresTahapan[]
  
  createdAt      DateTime         @default(now()) @map("created_at")
  updatedAt      DateTime         @updatedAt @map("updated_at")

  @@map("transaksi_pengadaan")
}

model ProgresTahapan {
  id                     Int                    @id @default(autoincrement()) 
  
  transaksiId            Int                    @map("transaksi_id")
  transaksi              TransaksiPengadaan     @relation(fields: [transaksiId], references: [id], onDelete: Cascade)
  
  tahapanId              Int                    @map("tahapan_id")
  tahapan                Tahapan                @relation(fields: [tahapanId], references: [id])
  
  status                 StatusTahapan          @default(on_progress)
  
  planningTanggalMulai   DateTime?              @map("planning_tanggal_mulai")
  planningTanggalSelesai DateTime?              @map("planning_tanggal_selesai")
  
  aktualTanggalMulai     DateTime?              @map("aktual_tanggal_mulai")
  aktualTanggalSelesai   DateTime?              @map("aktual_tanggal_selesai")
  
  keterangan             String?                @db.Text
  
  dokumen                DokumenProgresTahapan[] 

  updatedAt              DateTime               @updatedAt @map("updated_at")

  @@unique([transaksiId, tahapanId]) 
  @@map("progres_tahapan")
}

model DokumenProgresTahapan {
  id               Int            @id @default(autoincrement())
  
  progresTahapanId Int            @map("progres_tahapan_id")
  progresTahapan   ProgresTahapan @relation(fields: [progresTahapanId], references: [id], onDelete: Cascade)
  
  namaFile         String         @map("nama_file")
  fileUrl          String         @map("file_url")
  
  createdAt        DateTime       @default(now()) @map("created_at")

  @@map("dokumen_progres_tahapan")
}